<% include ../header %>
  <header>
    <h2>Ntalk - Editar contato</h2>
  </header>
  <section>
    <form action="/contact/<%- contact._id %>?_method=put" method="post">
      <label>Nome:</label>
      <input type="text" name="contact[name]" value="<%- contact.name %>">
      <label>E-mail:</label>
      <input type="text" name="contact[mail]" value="<%- contact.mail %>">
      <button type="submit">Atualizar</button>
    </form>
  </section>
<% include ../exit %>
<% include ../footer %>